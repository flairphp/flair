<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="true"
         debug="true">
    <testsuites>
        <testsuite name="AutoLoader">
            <directory suffix=".php">./tests/unit/AutoLoader/</directory>
            <exclude>./tests/unit/Autoloader/_TestClasses</exclude>
        </testsuite>
        <testsuite name="Excep">
            <directory suffix=".php">./tests/unit/Exception/</directory>
        </testsuite>
        <testsuite name="Validation\Core">
            <directory suffix=".php">./tests/unit/Validation/Core/</directory>
            <exclude>./tests/unit/Validation/Core/_TestCallable</exclude>
        </testsuite>
    </testsuites>
</phpunit>